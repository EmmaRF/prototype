doctype html
html
    head
    // Sidebar CSS
    link(href='css/simple-sidebar.css', rel='stylesheet')
    link(href='/css/blockgame.css', type='text/css', rel='stylesheet')
    script(type='text/javascript', src='/javascripts/blockgame.js')
    
    title BlockGame Pig
  
  body
    #wrapper
      // Sidebar
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/')
              | OVERBOOKED
          li
            a(href='/blockgameCat')
              img.img-responsive(src='/images/animals/cat.png', alt='')
          li
            a(href='/blockgameBear')
              img.img-responsive(src='/images/animals/bear.png', alt='')
          li
            a(href='/blockgameHorse')
              img.img-responsive(src='/images/animals/horse.png', alt='')
          li
            a(href='/blockgameRaccoon')
              img.img-responsive(src='/images/animals/raccoon.png', alt='')

      #page-content-wrapper
        .container-fluid
          .row
            .col-lg-12
              a#menu-toggle.btn.btn-default(href='#menu-toggle') 
                button Toggle Menu
              br
              br
              p Letters:
              #letter1.letter(ondrop='drop(event)', ondragover='allowDrop(event)')
                img#drag1(src='/images/letters/letter-g-64.ico', draggable='true', ondragstart='drag(event)', width='64', height='64')
              #letter2.letter(ondrop='drop(event)', ondragover='allowDrop(event)')
                img#drag2(src='/images/letters/letter-i-64.ico', draggable='true', ondragstart='drag(event)', width='64', height='64')
              #letter3.letter(ondrop='drop(event)', ondragover='allowDrop(event)')
                img#drag3(src='/images/letters/letter-p-64.ico', draggable='true', ondragstart='drag(event)', width='64', height='64')
              br
              br
              br
              br
              br
              p Answer:
              #ans1.answer(ondrop='drop(event)', ondragover='allowDrop(event)')
              #ans2.answer(ondrop='drop(event)', ondragover='allowDrop(event)')
              #ans3.answer(ondrop='drop(event)', ondragover='allowDrop(event)')
              br
              br
              button(onclick='correctAnswer()') Check
              br
              
              br
              br
              br
              #cat
                img(src='/images/animals/pig.png')
              #dancing-cat(style='display: none')
                p Answer: PIG
                img.img-responsive(src='images/dancing/dancing_pig.gif', alt='')
                br
                br
                a(href='/blockgame')
                  button Back to Block Games
                br
                br
                a(href='/')
                  button Home 

    // Scripts
   
    script(src='/jquery/jquery.min.js')
    
      // Menu Toggle
    
    script.
      $(document).ready(function() {
      $("#wrapper").toggleClass("toggled");
      });
      $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
      });
